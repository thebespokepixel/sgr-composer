{
  "name": "sgr-composer",
  "version": "0.4.1",
  "description": "Compose SGR codes from RGB values",
  "main": "index.js",
  "files": [
    "index-es.js",
    "index.js"
  ],
  "scripts": {
    "test": "xo && snyk test && nyc ava",
    "doc-serve": "documentation serve --watch --theme node_modules/documentation-theme-bespoke --github --config src/docs/documentation.yml --name $npm_package_name  --project-version $npm_package_version src/index.js",
    "doc-build": "documentation build --format html --output docs --theme node_modules/documentation-theme-bespoke --github --config src/docs/documentation.yml --name $npm_package_name  --project-version $npm_package_version src/index.js",
    "readme": "compile-readme -u src/docs/example.md src/docs/readme.md > readme.md",
    "code-climate": "nyc report --reporter=text-lcov | codeclimate-test-reporter",
    "coverage": "nyc ava && nyc report --reporter=lcov --report-dir test/coverage; open test/coverage/lcov-report/index.html",
    "clean": "gulp clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarkGriffiths/sgr-composer.git"
  },
  "keywords": [
    "CLI",
    "TTY",
    "SGR",
    "color",
    "colour",
    "24bit",
    "truecolor",
    "xterm",
    "iterm"
  ],
  "author": "Mark Griffiths <mark@thebespokepixel.com> (http://thebespokepixel.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarkGriffiths/sgr-composer/issues"
  },
  "homepage": "https://github.com/MarkGriffiths/sgr-composer#readme",
  "dependencies": {
    "color-convert": "^1.3.1"
  },
  "devDependencies": {
    "@thebespokepixel/cordial": "^0.17.10",
    "ava": "^0.16.0",
    "babel-plugin-external-helpers": "^6.8.0",
    "documentation": "^4.0.0-beta11",
    "documentation-theme-bespoke": "^0.3.0",
    "codeclimate-test-reporter": "^0.4.0",
    "greenkeeper-postpublish": "^1.0.1",
    "gulp": "github:gulpjs/gulp#4.0",
    "nyc": "^8.3.2",
    "snyk": "^1.19.1",
    "xo": "^0.17.0"
  },
  "engines": {
    "node": ">=4.0 <9.0"
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "verbose": true
  },
  "xo": {
    "semicolon": false,
    "esnext": true,
    "ignores": [
      "index*.js",
      "lib/**",
      "docs/**"
    ]
  },
  "badges": {
    "github": "MarkGriffiths",
    "npm": "thebespokepixel",
    "name": "sgr-composer",
    "providers": {
      "status": {
        "text": "beta",
        "color": "blue"
      },
      "aux1": {
        "title": "github",
        "text": "source",
        "color": "4E73B6",
        "link": "https://github.com/MarkGriffiths/sgr-composer"
      }
    },
    "readme": {
      "Status": [
        [
          "status",
          "npm",
          "travis",
          "david"
        ],
        [
          "code-climate",
          "code-climate-coverage",
          "snyk"
        ]
      ],
      "Developer": [
        "david-dev",
        "rollup"
      ],
      "Help": [
        "inch",
        "gitter"
      ]
    },
    "docs": [
      [
        "aux1",
        "travis"
      ],
      [
        "code-climate",
        "code-climate-coverage"
      ],
      [
        "david"
      ]
    ]
  },
  "buildNumber": 0,
  "jsnext:main": "index-es.js"
}
